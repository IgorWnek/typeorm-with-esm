{
  "name": "typeorm-with-esm",
  "version": "1.0.0",
  "description": "This is an app showing how to use TypeORM with ESM and Node.js",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "node --env-file=.env --import tsx src/app.ts",
    "dev:watch": "node --watch --env-file=.env --import tsx src/app.ts",
    "dev:debug": "node --inspect --env-file=.env --import tsx src/app.ts",
    "test": "tsx --test test/**/*.test.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "keywords": [
    "nodejs",
    "typescript",
    "esm",
    "boilerplate"
  ],
  "author": "Igor Wnek",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.2.0",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "pg": "^8.10.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  }
}
